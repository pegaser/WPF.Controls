<Window x:Class="Layouts.GroupBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts" mc:Ignorable="d"
        Title="GroupBoxWindow" Height="450" Width="800">
    <Grid>
        <GroupBox Margin="10" >
            <GroupBox.Header>
                <Label>My Group Box</Label>
            </GroupBox.Header>
            <StackPanel>
                <Label HorizontalAlignment="Center">Mi contenido</Label>
                <Button>Click Me</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
