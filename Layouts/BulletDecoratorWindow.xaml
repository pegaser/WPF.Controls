<Window x:Class="Layouts.BulletDecoratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts"
        mc:Ignorable="d" Title="BulletDecorator" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <BulletDecorator Margin="0,5,0,0"  VerticalAlignment="Center" Background="Yellow">
            <BulletDecorator.Bullet>
                <Rectangle Stroke="Red" Fill="Aqua" Height="25" Width="25"></Rectangle>
            </BulletDecorator.Bullet>
            <BulletDecorator.Child>
                <TextBlock HorizontalAlignment="Left" Foreground ="Purple">
                    Un ejemplo de BulletDecorator
                </TextBlock>
            </BulletDecorator.Child>
        </BulletDecorator>
        <BulletDecorator Margin="0,5,0,0"  VerticalAlignment="Center" Background="Yellow">
            <BulletDecorator.Bullet>
                <Rectangle Stroke="Blue" Fill="Aqua" Height="25" Width="25"></Rectangle>
            </BulletDecorator.Bullet>
            <Label HorizontalAlignment="Left" Foreground ="Purple">
                Otro ejemplo de BulletDecorator
            </Label>
        </BulletDecorator>
    </StackPanel>
</Window>
